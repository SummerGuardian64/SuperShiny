{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Intermediate/${presetName}",
      "installDir": "${sourceDir}/Install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug",
      "displayName": "Windows 11 x64 Debug",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/Intermediate/SuperShiny_Windows11_x64_Debug",
      "installDir": "${sourceDir}/Install/SuperShiny_Windows11_x64_Debug",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "Windows 11 x64 Release",
      "inherits": "x64-debug",
      "binaryDir": "${sourceDir}/Intermediate/SuperShiny_Windows11_x64_Release",
      "installDir": "${sourceDir}/Install/SuperShiny_Windows11_x64_Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
